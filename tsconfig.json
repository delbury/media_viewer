{
  "compilerOptions": {
    "strict": true,
    "allowJs": true,
    "checkJs": false,
    "target": "ESNext",
    "lib": ["ESNext"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "noImplicitAny": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "types": ["node"]
  },
  "exclude": ["node_modules", "dist", "**/*.mjs", "**/*.js", "**/*.cjs"]
}
