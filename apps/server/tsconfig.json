{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "target": "ESNext",
    "lib": ["ESNext"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "noImplicitAny": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "types": ["node"],
    "resolveJsonModule": true,
    "paths": {
      "#/*": ["./src/*"],
      "#pkgs/*": ["../../packages/*"],
      "#root/*": ["../../*"]
    }
  },
  "exclude": ["node_modules", "dist", "**/*.mjs", "**/*.js"]
}
